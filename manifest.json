{
  "name": "GitHub Pane Maximization",
  "description" : "GitHub Pane Maximization",
  "version": "1.5",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "img/icon16.png"
  },
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": [
      "src/background/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "https://*/blob/*",
    "https://*/pull/*",
    "https://*/compare/*",
    "https://*/commit/*",
    "storage"
  ]
}