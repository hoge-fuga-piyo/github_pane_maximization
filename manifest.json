{
  "name": "GitHub Pane Maximize",
  "description" : "GitHub Pane Maximize",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "img/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "src/3rdparty/jquery-3.4.1.min.js", 
        "src/content/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "src/3rdparty/jquery-3.4.1.min.js", 
      "src/background/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "https://github.com/*",
    "storage"
  ]
}